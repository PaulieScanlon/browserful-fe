{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2017", "dom"],
		"sourceMap": false,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true
	},
	"exclude": ["node_modules"],
	"types": ["typePatches"]
}
